<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_fuel_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.motologr.ui.add.service.ServiceFragment">

        <TextView
            android:id="@+id/text_service_price_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Price:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/radioGroup_service_type"
            app:layout_constraintTop_toBottomOf="@+id/editText_service_provider" />

        <EditText
            android:id="@+id/editText_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="@+id/text_service_price_prompt"
            app:layout_constraintTop_toBottomOf="@+id/text_service_price_prompt" />

        <EditText
            android:id="@+id/editText_service_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="@+id/text_service_provider_prompt"
            app:layout_constraintTop_toBottomOf="@+id/text_service_provider_prompt" />

        <TextView
            android:id="@+id/text_service_provider_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Provider"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/editText_service_date"
            app:layout_constraintTop_toBottomOf="@+id/editText_service_date" />

        <Button
            android:id="@+id/button_service_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_service_comment" />

        <RadioGroup
            android:id="@+id/radioGroup_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_service_type_prompt"
            app:layout_wrapBehaviorInParent="horizontal_only">

            <RadioButton
                android:id="@+id/radioButton_service_oil_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oil Change" />

            <RadioButton
                android:id="@+id/radioButton_service_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General" />

            <RadioButton
                android:id="@+id/radioButton_service_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full" />

        </RadioGroup>

        <TextView
            android:id="@+id/text_service_type_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Type:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_service_title" />

        <TextView
            android:id="@+id/text_service_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Service"
            android:textAlignment="center"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_service_date_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Service Date"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/editText_service_date"
            app:layout_constraintTop_toBottomOf="@+id/text_service_title" />

        <TextView
            android:id="@+id/text_service_comment_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Comments (Optional)"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_service_price" />

        <DatePicker
            android:id="@+id/editText_service_date"
            android:layout_width="248dp"
            android:layout_height="124dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_service_type"
            app:layout_constraintTop_toBottomOf="@+id/text_service_date_prompt" />

        <EditText
            android:id="@+id/editText_service_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_service_comment_prompt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>