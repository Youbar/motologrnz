<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.service.ServiceFragment">

    <Button
        android:id="@+id/button_service_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup_service_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_service_type_prompt"
        app:layout_wrapBehaviorInParent="horizontal_only">

        <RadioButton
            android:id="@+id/radioButton_service_oil_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oil Change" />

        <RadioButton
            android:id="@+id/radioButton_service_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General" />

        <RadioButton
            android:id="@+id/radioButton_service_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_service_type_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Type:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_service_title" />

    <TextView
        android:id="@+id/text_service_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Service"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_service_date_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Service Date"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_service_type"
        app:layout_constraintTop_toBottomOf="@+id/text_service_title" />

    <TextView
        android:id="@+id/text_service_comment_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Comments"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_service_type" />

    <EditText
        android:id="@+id/editText_service_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="**/**/****"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_service_type"
        app:layout_constraintTop_toBottomOf="@+id/text_service_date_prompt" />

    <EditText
        android:id="@+id/editText_service_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_service_comment_prompt" />

</androidx.constraintlayout.widget.ConstraintLayout>