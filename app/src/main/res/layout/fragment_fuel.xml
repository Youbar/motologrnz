<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_fuel_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_fuel_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_fuel_estimate_field" />

        <RadioGroup
            android:id="@+id/radioGroup_fuel_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <RadioButton
                android:id="@+id/radioButton_fuel_91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="91 Unleaded" />

            <RadioButton
                android:id="@+id/radioButton_fuel_95"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="95 Unleaded" />

            <RadioButton
                android:id="@+id/radioButton_fuel_98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98 Unleaded" />

            <RadioButton
                android:id="@+id/radioButton_fuel_diesel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diesel" />

        </RadioGroup>

        <TextView
            android:id="@+id/text_fuel_price_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Price:"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_fuel_type"
            tools:layout_editor_absoluteY="332dp" />

        <TextView
            android:id="@+id/text_fuel_date_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Purchase Date:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_fuel_odo_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Odometer:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_fuel_date" />

        <TextView
            android:id="@+id/text_fuel_estimate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Est. $/L:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/radioGroup_fuel_type"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup_fuel_type" />

        <TextView
            android:id="@+id/text_fuel_estimate_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="4"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/text_fuel_estimate"
            app:layout_constraintTop_toBottomOf="@+id/text_fuel_estimate" />

        <TextView
            android:id="@+id/text_fuel_litres_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="Litres:"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_fuel_type"
            app:layout_constraintTop_toBottomOf="@+id/editText_fuel_price" />

        <EditText
            android:id="@+id/editText_fuel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:ems="4"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_fuel_type"
            app:layout_constraintTop_toBottomOf="@+id/text_fuel_price_prompt" />

        <EditText
            android:id="@+id/editText_fuel_litres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:ems="4"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/radioGroup_fuel_type"
            app:layout_constraintTop_toBottomOf="@+id/text_fuel_litres_prompt" />

        <EditText
            android:id="@+id/editText_fuel_odo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="6"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_fuel_odo_prompt" />

        <View
            android:id="@+id/view"
            style="@style/Divider"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_fuel_odo" />

        <DatePicker
            android:id="@+id/editText_fuel_date"
            android:layout_width="248dp"
            android:layout_height="124dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_fuel_date_prompt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>