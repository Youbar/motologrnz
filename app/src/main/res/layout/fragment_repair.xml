<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.repair.RepairFragment">

    <RadioGroup
        android:id="@+id/radioGroup_repair_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_repair_type_prompt">

        <RadioButton
            android:id="@+id/radioButton_repair_minor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minor" />

        <RadioButton
            android:id="@+id/radioButton_repair_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Major" />

        <RadioButton
            android:id="@+id/radioButton_repair_critical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Critical" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_repair_type_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Type:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_repair_title" />

    <TextView
        android:id="@+id/text_repair_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Repair"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_repair_date_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Repair Date"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_repair_type"
        app:layout_constraintTop_toBottomOf="@+id/text_repair_title" />

    <TextView
        android:id="@+id/text_repair_comment_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Comments"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_repair_type" />

    <EditText
        android:id="@+id/editText_repair_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="**/**/****"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/radioGroup_repair_type"
        app:layout_constraintTop_toBottomOf="@+id/text_repair_date_prompt" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_repair_comment_prompt" />

</androidx.constraintlayout.widget.ConstraintLayout>